---
import Footer from "../components/Footer.astro";
import PostHog from "../components/posthog.astro";
import SEO from "../components/SEO.astro";
import "../styles/global.css";

interface Props {
  title: string;
  date: string;
  authors: { name: string; url?: string }[];
  description?: string;
  tags?: string[];
  banner?: { url: string; alt?: string; width?: number; height?: number };
}

const {
  title,
  date,
  authors = [],
  description,
  tags = [],
  banner,
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description ?? "Article on shriram.dev"}
      date={date}
      authors={authors}
      tags={tags}
      banner={banner}
    />
    <PostHog />
  </head>

  <body class="mx-5 md:mx-20 lg:mx-[10%] my-10 md:my-20 bg-[#F5F5F5]">
    <header class="md:text-center">
      <div>
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        <p>
          By {
            authors.map((author, index) => (
              <>
                <a class="underline inline-block" href={author.url}>
                  {author.name}
                </a>
                {index < authors.length - 1 && ","}
              </>
            ))
          } &middot; {formattedDate}
        </p>
      </div>
      <div class="text-[#0000FF]">
        <button class="cursor-pointer" onclick="history.back()">
          [Go back]
        </button>
        <a href="/">[Visit my homepage]</a>
      </div>
    </header>

    <main class="mt-10 lg:mt-20">
      <slot />
    </main>

    <Footer />
  </body>
</html>
