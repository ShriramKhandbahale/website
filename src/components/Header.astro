---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="flex flex-col md:flex-row justify-between lg:items-center gap-4">
  <div class="lg:flex items-center">
    <h1 class="text-3xl md:text-4xl font-bold lg:font-normal">{title}</h1>
  </div>

  <nav>
    <ul class="flex gap-2 md:gap-8 lg:text-lg text-[#0000FF] flex-wrap">
      <a href="/">
      <li>[Home]</li>
      </a>
      <a href="/articles">
        <li>[Articles]</li>
      </a>
      <a href="/blogs">
        <li>[Blogs]</li>
      </a>
      <a href="/activities">
        <li>[Activities]</li>
      </a>
      <a href="/projects">
        <li>[Projects]</li>
      </a>
    </ul>
  </nav>
</header>
